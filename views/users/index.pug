extends ../layouts/common

block content

	div(class="container")
		h1 Users

		a(href="/users/create") New users
		form(action="/users/search", method= "GET", class="form-inline")
			input(type="text" name="q" required, class="form-control")
			button(class="btn btn-primary ml-2") Search

		ul(class="list-group")
			each user in users
				li(class="list-group-item")
					span= user.name
					span &nbsp;
					a(href="/users/" + user.id) View